  <script>
    // BACK TO TOP BUTTON FUNCTIONALITY
    const backToTopBtn = document.getElementById('backToTopBtn');

    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('show');
      } else {
        backToTopBtn.classList.remove('show');
      }
    });

    backToTopBtn.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // SCROLL TO TOP FROM LOGO
    function scrollToTop(event) {
      event.preventDefault();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    }

    // ANIMATION STATE TRACKING (PREVENTS DOUBLE-TRIGGERING)
    const animationStates = new Map();

    const observerOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const elementId = entry.target;
        const isVisible = entry.isIntersecting;

        // Get current state (or initialize as not animated)
        let wasAnimated = animationStates.get(elementId) || false;

        // Only trigger animation if state changed (entering view)
        if (isVisible && !wasAnimated) {
          // Element is now visible AND wasn't animated yet
          if (entry.target.classList.contains('benefit-card')) {
            entry.target.classList.add('animate');
            animationStates.set(elementId, true);
          }
          if (entry.target.classList.contains('team-card')) {
            entry.target.classList.add('animate');
            animationStates.set(elementId, true);
          }
        } else if (!isVisible && wasAnimated) {
          // Element is now hidden AND was previously animated
          // Reset for next time they scroll back
          if (entry.target.classList.contains('benefit-card')) {
            entry.target.classList.remove('animate');
            animationStates.set(elementId, false);
          }
          if (entry.target.classList.contains('team-card')) {
            entry.target.classList.remove('animate');
            animationStates.set(elementId, false);
          }
        }
      });
    }, observerOptions);

    // Observe benefit cards
    document.querySelectorAll('.benefit-card').forEach(card => {
      observer.observe(card);
      animationStates.set(card, false); // Initialize state
    });

    // Observe team cards
    document.querySelectorAll('.team-card').forEach(card => {
      observer.observe(card);
      animationStates.set(card, false); // Initialize state
    });

    // SMOOTH HERO IMAGE PARALLAX (NO STUTTER)
    let ticking = false;
    let lastScrollY = 0;

    document.addEventListener('scroll', () => {
      lastScrollY = window.scrollY;

      if (!ticking) {
        window.requestAnimationFrame(() => {
          const heroImage = document.querySelector('.hero-image img');
          if (heroImage) {
            // Smooth easing function for parallax
            heroImage.style.transform = `translateY(${lastScrollY * 0.4}px)`;
          }
          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });

    // FORM SUBMISSION
    function handleSubmit(event) {
      event.preventDefault();
      alert('Thank you! Our team will contact you within 24 hours.');
      event.target.reset();
    }
