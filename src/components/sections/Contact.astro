<section class="contact-section" id="contact">
  <div class="contact-content">
    <h2>Start Your Journey to Lasting Back Pain Relief</h2>
    <form onsubmit="handleSubmit(event)">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" placeholder="Your name" required />
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="your@email.com" required />
      </div>

      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" placeholder="(248) 555-0123" required />
      </div>

      <div class="form-group">
        <label for="message">Tell us about your back pain</label>
        <textarea id="message" name="message" placeholder="Describe your condition..." required></textarea>
      </div>

      <button type="submit" class="submit-button">Schedule Free Consultation</button>
    </form>
  </div>
</section>

<style>
  .contact-section {
    background: linear-gradient(135deg, #40c557 0%, #228b22 100%);
    position: relative;
    padding: 100px 2rem;
    overflow: hidden;
  }

  .contact-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    border-radius: 50%;
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .contact-section h2 {
    font-size: clamp(2rem, 5vw, 2.5rem);
    margin-bottom: 2rem;
    text-align: center;
    color: white;
    font-weight: 700;
    line-height: 1.3;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.8rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    font-family: inherit;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    color: white;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    width: 100%;
    background: white;
    color: #228b22;
    border: none;
    padding: 16px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.05rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .submit-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.95);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  @media (max-width: 600px) {
    .contact-section {
      padding: 60px 1rem;
    }

    .contact-section h2 {
      font-size: 1.8rem;
    }
  }
</style>

<script lang="ts">
  function handleSubmit(event: SubmitEvent) {
    event.preventDefault();

    // show confirmation
    alert('Thank you! Our team will contact you within 24 hours.');

    // Safely get the form element and reset it
    const form = event.target as HTMLFormElement | null;
    if (form && typeof form.reset === 'function') {
      form.reset();
    }
  }
</script>
