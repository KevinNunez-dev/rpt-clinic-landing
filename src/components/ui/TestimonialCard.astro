---
interface Props {
  name: string;
  location: string;
  rating: number;
  text: string;
}

const { name, location, rating, text } = Astro.props;
---

<div class="testimonial-card">
  <div class="stars">{"â˜…".repeat(rating)}</div>
  <p class="testimonial-text">"{text}"</p>
  <div class="author">
    <strong>{name}</strong>
    <span>{location}</span>
  </div>
</div>

<style>
  .testimonial-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    padding: 2.5rem;
    border-radius: 15px;
    border: 2px solid rgba(64, 197, 87, 0.3);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .testimonial-card:hover {
    border-color: rgba(64, 197, 87, 0.6);
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(64, 197, 87, 0.3);
  }

  .stars {
    color: #40c557;
    font-size: 1.2rem;
  }

  .testimonial-text {
    color: #e8e8e8;
    font-style: italic;
    line-height: 1.6;
    flex-grow: 1;
  }

  .author {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    border-top: 1px solid rgba(64, 197, 87, 0.2);
    padding-top: 1rem;
  }

  .author strong {
    color: #40c557;
    font-weight: 600;
  }

  .author span {
    color: #999;
    font-size: 0.9rem;
  }
</style>
