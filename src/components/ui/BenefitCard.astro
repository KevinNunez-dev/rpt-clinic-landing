---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="benefit-card">
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .benefit-card {
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(20px);
    padding: 3rem 2rem;
    border-radius: 20px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    border: 2px solid rgba(64, 197, 87, 0.3);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: translateY(80px) rotateX(10deg);
  }

  .benefit-card.animate {
    opacity: 1;
    transform: translateY(0) rotateX(0);
    animation: slideUpRotate 1s ease forwards;
  }

  /* Staggered animation delays */
  .benefit-card:nth-child(1).animate {
    animation: slideUpRotate 1s ease 0.1s forwards;
  }

  .benefit-card:nth-child(2).animate {
    animation: slideUpRotate 1s ease 0.3s forwards;
  }

  .benefit-card:nth-child(3).animate {
    animation: slideUpRotate 1s ease 0.5s forwards;
  }

  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(64, 197, 87, 0.2), transparent);
    transition: left 0.5s;
    z-index: 0;
  }

  .benefit-card:hover {
    transform: translateY(-20px);
    border-color: rgba(64, 197, 87, 0.6);
    box-shadow: 0 20px 60px rgba(64, 197, 87, 0.4);
    background: rgba(255, 255, 255, 0.1);
  }

  .benefit-card:hover::before {
    left: 100%;
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    margin: 1rem 0;
    background: linear-gradient(135deg, #40c557 0%, #228b22 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    z-index: 1;
    font-weight: 700;
  }

  .benefit-card p {
    color: #b8b8b8;
    position: relative;
    z-index: 1;
    line-height: 1.6;
  }

  @keyframes slideUpRotate {
    from {
      opacity: 0;
      transform: translateY(80px) rotateX(10deg);
    }
    to {
      opacity: 1;
      transform: translateY(0) rotateX(0);
    }
  }
</style>
